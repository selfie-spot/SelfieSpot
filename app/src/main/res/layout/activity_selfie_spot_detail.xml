<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_selfie_spot_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codepath.selfiespot.activities.SelfieSpotDetailActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ToolbarTheme">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize" />
    </android.support.design.widget.AppBarLayout>


    <Button
        android:id="@+id/btnRateMe"
        android:text="@string/like"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/primary"
        android:textColor="@color/icons"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_toRightOf="@+id/tvDesc"
        android:layout_toEndOf="@+id/tvDesc" />

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:src="@mipmap/selfiespot_login_bg"
        android:contentDescription="@string/selfiespot_detail_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appbar"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:layout_above="@+id/tvName"
       />

    <TextView
        android:text="@string/desc"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvDesc"
        android:layout_toLeftOf="@+id/rbRatingBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/rbRatingBar"
        android:layout_alignParentBottom="true"
        android:textSize="16sp"
        android:maxLines="3"
        android:textColor="@color/primary_dark"
        tools:ignore="RtlHardcoded" />

    <RatingBar
        android:id="@+id/rbRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
        tools:ignore="RtlHardcoded"
        android:layout_above="@+id/btnRateMe"


        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tvName"
        android:text="@string/tvName"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/primary_dark"
        tools:ignore="RtlHardcoded"
        android:layout_above="@+id/tvDesc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codepath.selfiespot.activities.LoginActivity"
    android:layout_gravity="center"
    android:background="@drawable/shape_gradient">

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="30dp"
        android:text="@string/login_with_facebook"
        android:textAllCaps="false"
        android:background="@drawable/shape_button"
        android:textColor="#ffffff"
        android:layout_gravity="bottom|center"/>

    <TextView
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/selfiespot"
        android:textColor="#EC407A"
        android:textSize="45sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:id="@+id/tv_title"
        android:layout_marginTop="190dp"
        android:layout_gravity="top|center"
        />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ivImageView"
        android:contentDescription="@string/gradient"/>

    <ImageView
        android:layout_width="92dp"
        android:layout_height="74dp"
        app:srcCompat="@drawable/login_camera"
        android:id="@+id/imageView"
        android:layout_marginTop="105dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/desc"
        tools:ignore="HardcodedText" />

    <TextView
        android:text="@string/punchline"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_punchline"
        android:textColor="#EC407A"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="247dp"
        android:layout_gravity="top|center" />


</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/ivSelfieSpotImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/selfiespot_image" />

    <TextView
        android:id="@+id/tvSelfieSpotName"
        android:text="@string/tvSelfiSpotNameDefVal"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivSelfieSpotImage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="16sp"
        tools:ignore="RtlHardcoded"
        android:textColor="@color/primary_dark"/>

    <TextView
        android:id="@+id/tvSelfieSpotDesc"
        android:text="@string/tvSelfieSpotDecDefVal"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_below="@+id/tvSelfieSpotName"
        android:layout_toRightOf="@+id/ivSelfieSpotImage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:maxLines="2"
        android:textSize="14sp"
        tools:ignore="RtlHardcoded"
        android:textColor="@color/primary_dark"/>

    <RatingBar
        android:id="@+id/rbSelfieSpotRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/ivSelfieSpotImage"
        android:layout_toRightOf="@+id/ivSelfieSpotImage"
        style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
        tools:ignore="RtlHardcoded" />
</RelativeLayout>